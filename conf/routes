# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /index			    controllers.Application.index
GET	/meetings		    controllers.Application.meetings
GET	/address		    controllers.Application.address
GET	/sponsors		    controllers.Application.sponsors

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Languages
GET	/lang				controllers.Application.lang(l: String)

# Templates
GET	/templates/ngapp/address/map				controllers.Templates.ngAppAddressMap
GET	/templates/ngapp/address/contact			controllers.Templates.ngAppAddressContact
GET	/templates/ngapp/sponsors/crossing-tech			controllers.Templates.ngAppSponsorsCrossingTech
GET	/templates/ngapp/sponsors/epfl				controllers.Templates.ngAppSponsorsEpfl

